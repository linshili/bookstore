	<!--畅销 换一换 -->
	<select id="cBestSelling" resultMap="bookResultMap">
		select
		book.*
		from
		book,orderitem
		where orderitem.book_id=book.book_id
		order by
		orderitem.oitem_count DESC
		limit #{0},#{1}
	</select>

	<!-- 降价-换一换 -->
	<select id="cPrice" resultMap="bookResultMap">
		select
		book.*
		from book
		order by
		book.book_id DESC
		limit #{0},#{1}
	</select>

	<!-- 文学小说-换一换 -->
	<select id="cNovel" resultMap="bookResultMap">
		select
		<include refid="Base_Column_List" />
		from book
		where
		book.cate_id=#{0}
		order by book.book_id DESC
		limit #{1},#{2}
	</select>

