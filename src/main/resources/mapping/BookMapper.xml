	   from book
	   where book.cate_id=#{0}
	   order by book.book_id DESC
	   limit #{1},#{2}
	</select>
	
	
	<!-- 教育学习的查看全部 -->
	<select id="educationCount" parameterType="Integer" resultType="Integer">
	   select  count(*)
	   from book
	   where book.secondCate_id=#{0}
	</select>
	<select id="education"  resultMap="bookResultMap">
	   select 
	   book.*
	   from book
	   where book.secondCate_id=#{0}
	   order by book.book_id DESC
	   limit #{1},#{2}
	</select>
	
	
	<!-- IT科技的查看全部 -->
	<select id="technologyCount" parameterType="Integer" resultType="Integer">
	   select count(*)
	   from book
	   where book.cate_id=#{0}
	</select>
	<select id="technology"  resultMap="bookResultMap">
	   select 
	   book.*
	   from book
       where book.cate_id=#{0}
       order by book.book_id DESC
	   limit #{1},#{2}
	</select>
</mapper>